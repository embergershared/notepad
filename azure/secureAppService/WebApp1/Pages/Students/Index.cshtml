@page
@model WebApp1.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Students";
}

<h1>Students list</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].EnrollmentDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<h3>Some debug data</h3>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Key
                </th>
                <th>
                    Value
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <div style="float: left; text-align: left">EF Core Db Context</div>
                </td>
                <td>
                    <div style='float: left; text-align: left'>@ViewData["EfContext"]</div>
                </td>
            </tr>
            <tr>
                <td>
                    <div style='float: left; text-align: left'>Connection String</div>
                </td>
                <td>
                    <div style='float: left; text-align: left'>@ViewData["connString"]</div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
